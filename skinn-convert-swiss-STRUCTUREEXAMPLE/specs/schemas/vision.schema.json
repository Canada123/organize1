{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vision.schema.json",
  "title": "Product Vision Schema",
  "description": "Schema for product vision documentation",
  "type": "object",
  "required": ["version", "last_updated", "product", "vision", "personas", "use_cases"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the vision document"
    },
    "last_updated": {
      "type": "string",
      "format": "date",
      "description": "ISO 8601 date of last update"
    },
    "product": {
      "type": "object",
      "required": ["name", "type", "market"],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "market": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "vision": {
      "type": "object",
      "required": ["statement", "goals", "non_goals"],
      "properties": {
        "statement": { "type": "string", "minLength": 50 },
        "goals": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 3
        },
        "non_goals": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "personas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "goals", "pain_points"],
        "properties": {
          "id": { "type": "string", "pattern": "^P-\\d{3}$" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "demographics": { "type": "object" },
          "goals": {
            "type": "array",
            "items": { "type": "string" }
          },
          "pain_points": {
            "type": "array",
            "items": { "type": "string" }
          },
          "tech_savvy": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          }
        }
      }
    },
    "use_cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "persona", "scenario", "acceptance_criteria"],
        "properties": {
          "id": { "type": "string", "pattern": "^UC-\\d{3}$" },
          "title": { "type": "string" },
          "persona": { "type": "string", "pattern": "^P-\\d{3}$" },
          "scenario": { "type": "string" },
          "acceptance_criteria": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "success_criteria": {
      "type": "object",
      "properties": {
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "target"],
            "properties": {
              "name": { "type": "string" },
              "target": { "type": "string" },
              "current": { "type": "string" }
            }
          }
        },
        "qualitative": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "technical": { "type": "array", "items": { "type": "string" } },
        "regulatory": { "type": "array", "items": { "type": "string" } },
        "business": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}