{
  "src/**/*.{ts,tsx,js,jsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "src/**/*.{css,scss}": [
    "prettier --write"
  ],
  "src/**/*.{json,md}": [
    "prettier --write"
  ],
  "*.{ts,tsx}": [
    "bash -c 'npm run typecheck'"
  ],
  "src/translations/**/*.ts": [
    "node scripts/validate-translations.js"
  ]
}