  "invocation_strategies": {
    "parallel": {
      "description": "Execute agents simultaneously",
      "use_when": "Tasks are independent",
      "example": "Research from multiple sources"
    },
    "sequential": {
      "description": "Execute agents in order",
      "use_when": "Tasks have dependencies",
      "example": "Design → Implement → Test"
    },
    "collaborative": {
      "description": "Agents work together iteratively",
      "use_when": "Need back-and-forth refinement",
      "example": "Design iterations"
    },
    "checkpoint": {
      "description": "Execute at quality gates",
      "use_when": "Validation needed",
      "example": "After each phase"
    },
    "post_execution": {
      "description": "Run after main work complete",
      "use_when": "Cleanup or documentation",
      "example": "Update docs after feature"
    },
    "on_demand": {
      "description": "Execute when specifically needed",
      "use_when": "Utility functions",
      "example": "Git operations"
    }
  },
  "workflow_detection": {
    "bug_fix": {
      "trigger_words": ["bug", "error", "fix", "broken"],
      "agent_sequence": ["research.code-searcher", "core.executor", "quality.testing-qa-agent"],
      "context_tier": 2
    },
    "new_feature": {
      "trigger_words": ["implement", "create", "add", "feature"],
      "agent_sequence": ["core.planner", "design.*", "core.executor", "quality.*"],
      "context_tier": 3
    },
    "database_change": {
      "trigger_words": ["database", "schema", "migration", "table"],
      "agent_sequence": ["database.supabase-architect", "database.supabase-implementation-engineer"],
      "context_tier": 3
    },
    "ui_update": {
      "trigger_words": ["ui", "design", "component", "style"],
      "agent_sequence": ["design.ux-design-expert", "design.design-system-architect", "core.executor"],
      "context_tier": 2
    },
    "research_task": {
      "trigger_words": ["research", "investigate", "explore", "find"],
      "agent_sequence": ["research.*", "documentation.documentation-maintainer"],
      "context_tier": 2
    }
  },
  "fallback_chains": {
    "database": {
      "primary": "supabase-architect",
      "fallback": "supabase-implementation-engineer",
      "final": "core.planner"
    },
    "frontend": {
      "primary": "ux-design-expert",
      "fallback": "design-system-architect",
      "final": "core.executor"
    },
    "testing": {
      "primary": "testing-qa-agent",
      "fallback": "guardrails-agent",
      "final": "reflection-agent"
    }
  },
